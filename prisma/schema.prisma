generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

model Vote {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  question  String
  option    Option   @relation(fields: [optionId], references: [id])
  optionId  Int
  duree     Int

  @@map("Vote")
  @@index([optionId])
}

model Option {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  nom      String
  votes     Vote[]
  userVotes UserVote[]
  @@map("Option")
}

model UserVote {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  discordId String
  option    Option   @relation(fields: [optionId], references: [id])
  optionId  Int
  @@map("UserVote")
  @@index([optionId])
}
